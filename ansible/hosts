# The central group should have only the appliance which will host the centralized logs.
[central]
vmdb_appliance

# The remotes group should have the rest of the appliances which will log to the central.
# Do not include the central host here.
[remotes]
ui_appliance_1
ui_appliance_2
wrk_appliance_1
wrk_appliance_2
wrk_appliance_3

# If appliances are not in DNS, you can set them as:
#[central]
#vmdb_appliance ansible_host=192.168.1.101
#
#[remotes]
#ui_appliance_1 ansible_host=192.168.1.102
#ui_appliance_2 ansible_host=192.168.1.102
#wrk_appliance_1 ansible_host=192.168.1.103
#wrk_appliance_2 ansible_host=192.168.1.104
#wrk_appliance_3 ansible_host=192.168.1.105

